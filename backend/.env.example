# Скопируйте в .env и заполните значения

# Токен бота из @BotFather
TELEGRAM_BOT_TOKEN=

# Публичный URL бэкенда (без слэша в конце). Нужен для автоматической регистрации webhook при деплое.
# Пример: https://1p.7rights.ru
PUBLIC_URL=

DATABASE_URL=postgresql://courier:courier_secret@postgres:5432/courier_miniapp?schema=public
JWT_SECRET=change-me-min-32-chars
JWT_EXPIRES_IN=7d

# Подсказки адресов и геокодер (ключи не отдаются на фронт; прокси: /api/yandex/suggest, /api/yandex/geocode)
# Можно задать один YANDEX_MAPS_API_KEY — он будет использоваться для suggest и geocode, если YA_* не заданы
YA_SUGGEST_KEY=
YA_GEOCODER_KEY=
