# База данных PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/courier_miniapp?schema=public"

# Telegram Bot Token (проверка WebApp, webhook, отправка клавиатуры)
TELEGRAM_BOT_TOKEN=""

# Имя бота без @ (для ссылки «Открыть бота» в мини-приложении), например drivergo_bot
TELEGRAM_BOT_USERNAME="drivergo_bot"

# JWT
JWT_SECRET="change-me-in-production-min-32-chars"
JWT_EXPIRES_IN="7d"

# Порт сервера
PORT=3000

# Яндекс.Карты (API key для JS API 2.1)
# https://developer.tech.yandex.ru/services
YANDEX_MAPS_API_KEY=

# Окружение
NODE_ENV=development
